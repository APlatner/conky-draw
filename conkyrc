${voffset 250}
> CPU
${top cpu 1}% ${top name 1}
${top cpu 2}% ${top name 2}
${top cpu 3}% ${top name 3}

> MEM
${top_mem mem 1}% ${top_mem name 1}
${top_mem mem 2}% ${top_mem name 2}
${top_mem mem 3}% ${top_mem name 3}

> DISKS
system:  ${fs_free /} free
home:  ${fs_free /home} free

> NETWORK
eth0:  ${addr eth0}  ${downspeedf eth0} / ${upspeed eth0}
${if_up wlan0}
wlan0:  ${addr wlan0}  ${downspeedf wlan0} / ${upspeed wlan0}
${endif}

> HOME BACKUP
${execi 2 tail -n 4 /home/fisa/cron_logs/backup_home.log}

> MAIL BACKUP
${execi 2 tail -n 4 /home/fisa/cron_logs/backup_gmail.log}
